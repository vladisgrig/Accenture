@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

    <div class="text-center">
        <h1 class="display-4">Accenture Analysis Platform</h1>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">OrderId</th>
                    <th scope="col">Details</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model.Orders)
                {
                    <tr>
                        <th scope="row">@order.Id</th>
                        <td><a href="/Order?id=@order.Id">More info...</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
